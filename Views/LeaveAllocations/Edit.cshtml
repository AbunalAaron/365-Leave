@model Leave_Management.Models.EditLeaveAllocationViewModel

@{
    ViewData["Title"] = "Edit";
}

    <h1>Edit: @Model.LeaveType.Name for @Model.Employee.LastName, @Model.Employee.FirstName</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-block btn-outline-secondary" asp-action="Index">Back to List</a>
</div>

